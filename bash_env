
# Input line
PS1="\[\033[0;33m\]\h@\u:\l \[\033[1;37m\]\w \n\`if [ \$? = 0 ]; then echo \[\e[32m\]^_^\[\e[0m\]; else echo \[\e[31m\]O_o\[\e[0m\]; fi\`\\$ "

# For correcting misprint in command argument. For example: form cd /user to cd /usr
shopt -s cdspell
# For correcting misprint in command argument. For example: form cd /Usr to cd /usr
shopt -s nocaseglob

export EDITOR=vim

export PATH="${PATH}:/usr/bin/added/"

# If the last character of the alias value is a space or tab character, then the next command word following the alias is also checked for alias expansion
alias sudo='sudo '  # for working commands like "sudo ll" etc.

alias git_ac='git add . && git commit -a -m'

alias ls='ls --color=auto'
alias ll='ls -lah'

alias grep='grep --color=yes'

# Convert to jpg
alias tojpg='mogrify -format jpg $1'

# SnaifServer
export ip_SnaifServer="77.91.195.205"
export ip_SnaifServer_local="192.168.1.111"
export portssh_SnaifServer="2002"
alias con_snaifServer="ssh -p $portssh_SnaifServer snaiffer@$ip_SnaifServer"
alias con_snaifServer_local="ssh -p $portssh_SnaifServer snaiffer@$ip_SnaifServer_local"
alias con_snaifServer_test="ssh snaiffer@192.168.51.51"

# for sshfs
export sshfs_targetPath="/stores/SnaifStore_0"
declare -x sshfs_users=( snaiffer parents )
declare -x sshfs_paths=( /home/snaiffer/remote/SnaifServer /home/parents/remote/SnaifServer )  


